<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/main_gradient">


    <TextView
        android:id="@+id/page_num"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="text"
        android:textColor="#FFFFFF"
        android:textSize="24dp" />

    <ListView
        android:id="@+id/guide_lv"
        android:layout_width="240dp"
        android:layout_height="336dp"
        android:layout_below="@+id/page_num"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/border_radius_white"
        android:padding="7dp" />

    <Button
        android:id="@+id/btn_searchWifi"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_below="@+id/guide_lv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_radius_white_line"
        android:padding="5dp"
        android:text="@string/equipmentActivity_endSearch"
        android:textColor="@color/color6" />

    <ImageView
        android:id="@+id/guide_img"
        android:layout_width="240dp"
        android:layout_height="336dp"
        android:layout_above="@+id/ll1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/guideimg" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bordertop"
        android:gravity="center">

        <RadioGroup
            android:id="@+id/rg_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:buttonTint="@color/color6" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:buttonTint="@color/color6" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:buttonTint="@color/color6" />

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:buttonTint="@color/color6" />
        </RadioGroup>

    </LinearLayout>


</RelativeLayout>